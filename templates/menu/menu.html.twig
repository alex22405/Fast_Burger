                                        {% else %}
                                            <p>Aucune image disponible</p>
                                        {% endif %}
                                    </div>
                                    <div class="menu-text">
                                        <h3><span>{{ product.productName }}</span> <strong>{{ product.prix }} €
                                            </strong></h3>
                                        <p>{{ product.productDescription }}</p>
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                            <div class="col-lg-5 d-none d-lg-block">
                                <img src="img/menu-beverage-img.jpg" alt="Image">
                            </div>
                        </div>
                    </div>  <div id="beverages" class="container tab-pane active">
                        <div class="row">
                            <div class="col-lg-7 col-md-12">
                                {% for product in menuProducts %}
                                <div class="menu-item">
                                    <div class="menu-img">
                                        {% if product.images is not empty %}
                                            <img src="{{ asset('/assets/img/products/' ~ product.images.first().name) }}" alt="{{ product.productName }}">
                                        {% else %}
                                            <p>Aucune image disponible</p>
                                        {% endif %}
                                    </div>
                                    <div class="menu-text">
