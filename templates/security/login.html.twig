{% extends 'admin/index.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
{% endblock %}
    {% block content %}
        <div class="connexion_container">
        <form method="post">
            {% if error %}
                <div class="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="connexion">
                    Vous êtes connecté comme {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Me déconnecter</a>
                </div>
            {% endif %}

            <h1>Me connecter</h1>
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            <label for="inputPassword">Mot de passe  <a href="{{ path('app_forgot_password_request') }}" style="margin-left: 20px"> Mot de passe oublié ? </a></label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}">

            <button class="btn" type="submit">
                Me connecter
            </button>
            
        </form>
    {% endblock %}